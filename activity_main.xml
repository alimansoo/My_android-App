<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ProgramBtn"
        android:layout_width="245dp"
        android:layout_height="71dp"
        android:text="برنامه"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839" />

    <Button
        android:id="@+id/Start1Btn"
        android:layout_width="245dp"
        android:layout_height="71dp"
        android:layout_marginBottom="25dp"
        android:text="سانس1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Start2Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ReadBtn"
        android:layout_width="245dp"
        android:layout_height="71dp"
        android:layout_marginBottom="25dp"
        android:text="مطالعه کتاب"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ProgramBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Start2Btn"
        android:layout_width="245dp"
        android:layout_height="71dp"
        android:layout_marginBottom="25dp"
        android:text="سانس2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ReadBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A 3.1.0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/ProgramBtn"
        app:layout_constraintVertical_bias="0.955" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V:"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toEndOf="@+id/SetLessonBtn"
        app:layout_constraintTop_toBottomOf="@+id/ProgramBtn"
        app:layout_constraintVertical_bias="0.952" />

    <Button
        android:id="@+id/SetLessonBtn"
        android:layout_width="166dp"
        android:layout_height="44dp"
        android:text="تغییر برنامه روزانه"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgramBtn"
        app:layout_constraintVertical_bias="0.943" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="163dp"
        android:layout_height="106dp"
        app:layout_constraintBottom_toTopOf="@+id/Start1Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/about"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:text="؟"
        android:textAlignment="inherit"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Start1Btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

</androidx.constraintlayout.widget.ConstraintLayout>